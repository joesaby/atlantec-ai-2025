---
import Layout from '../components/common/Layout.astro';
import { db } from 'astro:db';
import { SustainabilityMetrics, Gardens } from '../database/schema.js';
import SustainabilityDashboard from '../components/sustainability/SustainabilityDashboard.jsx';

// In a real app, we would get the user's current garden
// For now, we'll mock this data
const currentGarden = {
  id: 1,
  name: "My Irish Garden",
  size: 50, // square meters
  soilType: "Brown Earth",
  sunExposure: "Partial Shade"
};

// Get sustainability metrics
const metrics = await db.select()
  .from(SustainabilityMetrics)
  .where(metric => metric.gardenId === currentGarden.id)
  .orderBy(metric => metric.recordDate, 'desc');

// If there are no metrics yet, create sample data
if (metrics.length === 0) {
  const today = new Date();
  const sampleMetrics = [
    {
      gardenId: currentGarden.id,
      recordDate: today,
      waterUsage: 15,
      compostAmount: 2.5,
      pesticidesUsed: false,
      organicPractices: true,
      rainwaterHarvested: 25,
      foodProduced: 1.2
    }
  ];
  
  // Add sample data from previous days
  for (let i = 1; i <= 30; i++) {
    const date = new Date();
    date.setDate(today.getDate() - i);
    
    sampleMetrics.push({
      gardenId: currentGarden.id,
      recordDate: date,
      waterUsage: Math.floor(Math.random() * 20) + 5,
      compostAmount: Math.random() * 3,
      pesticidesUsed: Math.random() > 0.8,
      organicPractices: Math.random() > 0.2,
      rainwaterHarvested: Math.floor(Math.random() * 30),
      foodProduced: Math.random() * 2
    });
  }
  
  try {
    await db.insert(SustainabilityMetrics).values(sampleMetrics);
    metrics.push(...sampleMetrics);
  } catch (error) {
    console.error('Error inserting sample sustainability metrics:', error);
  }
}
---

<Layout title="Sustainability Tracker">
  <div class="max-w-7xl mx-auto">
    <header class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Garden Sustainability Tracker</h1>
      <p class="mt-2 text-lg text-gray-600">
        Monitor and improve the environmental impact of your Irish garden.
      </p>
    </header>
    
    <!-- Sustainability Dashboard -->
    <SustainabilityDashboard metrics={metrics} garden={currentGarden} client:load />
    
    <!-- Record New Data Form -->
    <div class="bg-white rounded-lg shadow-md p-6 mt-8">
      <h2 class="text-xl font-semibold mb-6">Record New Sustainability Data</h2>
      
      <form class="space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label for="waterUsage" class="block text-sm font-medium text-gray-700 mb-1">
              Water Usage (Liters)
            </label>
            <input
              type="number"
              id="waterUsage"
              name="waterUsage"
              min="0"
              step="0.1"
              class="w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring focus:ring-green-200"
              placeholder="e.g., 15"
            />
          </div>
          
          <div>
            <label for="rainwaterHarvested" class="block text-sm font-medium text-gray-700 mb-1">
              Rainwater Harvested (Liters)
            </label>
            <input
              type="number"
              id="rainwaterHarvested"
              name="rainwaterHarvested"
              min="0"
              step="0.1"
              class="w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring focus:ring-green-200"
              placeholder="e.g., 20"
            />
          </div>
          
          <div>
            <label for="compostAmount" class="block text-sm font-medium text-gray-700 mb-1">
              Compost Added/Created (Kg)
            </label>
            <input
              type="number"
              id="compostAmount"
              name="compostAmount"
              min="0"
              step="0.1"
              class="w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring focus:ring-green-200"
              placeholder="e.g., 2.5"
            />
          </div>
          
          <div>
            <label for="foodProduced" class="block text-sm font-medium text-gray-700 mb-1">
              Food Harvested (Kg)
            </label>
            <input
              type="number"
              id="foodProduced"
              name="foodProduced"
              min="0"
              step="0.1"
              class="w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring focus:ring-green-200"
              placeholder="e.g., 1.2"
            />
          </div>
        </div>
        
        <div class="flex space-x-6">
          <div class="flex items-center">
            <input
              type="checkbox"
              id="organicPractices"
              name="organicPractices"
              checked
              class="h-4 w-4 text-green-600 focus:ring-green-500 border-gray-300 rounded"
            />
            <label for="organicPractices" class="ml-2 text-sm text-gray-700">
              Using Organic Gardening Practices
            </label>
          </div>
          
          <div class="flex items-center">
            <input
              type="checkbox"
              id="pesticidesUsed"
              name="pesticidesUsed"
              class="h-4 w-4 text-green-600 focus:ring-green-500 border-gray-300 rounded"
            />
            <label for="pesticidesUsed" class="ml-2 text-sm text-gray-700">
              Chemical Pesticides Used
            </label>
          </div>
        </div>
        
        <div>
          <label for="notes" class="block text-sm font-medium text-gray-700 mb-1">
            Notes (Optional)
          </label>
          <textarea
            id="notes"
            name="notes"
            rows="3"
            class="w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring focus:ring-green-200"
            placeholder="Record any other sustainability actions or observations..."
          ></textarea>
        </div>
        
        <div class="flex justify-end">
          <button
            type="submit"
            class="bg-green-600 text-white py-2 px-6 rounded-md hover:bg-green-700"
          >
            Save Data
          </button>
        </div>
      </form>
    </div>
    
    <!-- Sustainability Resources -->
    <div class="bg-green-50 p-6 rounded-lg shadow-md mt-8">
      <h2 class="text-xl font-semibold mb-4">Irish Sustainability Resources</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <a href="#" class="block bg-white p-4 rounded-md shadow hover:shadow-md transition-shadow">
          <h3 class="font-medium text-green-700 mb-2">Community Gardens Ireland</h3>
          <p class="text-gray-600 text-sm">
            Connect with local community gardens and share sustainable gardening practices.
          </p>
        </a>
        
        <a href="#" class="block bg-white p-4 rounded-md shadow hover:shadow-md transition-shadow">
          <h3 class="font-medium text-green-700 mb-2">Irish Peatland Conservation Council</h3>
          <p class="text-gray-600 text-sm">
            Learn about peat-free gardening alternatives to protect Ireland's valuable bog habitats.
          </p>
        </a>
        
        <a href="#" class="block bg-white p-4 rounded-md shadow hover:shadow-md transition-shadow">
          <h3 class="font-medium text-green-700 mb-2">Grow It Yourself Ireland</h3>
          <p class="text-gray-600 text-sm">
            Resources for growing your own food sustainably in Irish conditions.
          </p>
        </a>
      </div>
    </div>
  </div>
</Layout>